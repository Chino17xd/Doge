<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/dropPet.css">

    <link rel="icon" href="/img/Dogeicon.ico">
    <link rel="stylesheet" href="/css/nav_dropPet.css">

    <script src="js/notification.js"></script>
    
    <title> Publicar </title>
</head>

<body>
    <div>
        <%- include('nav') %>
    </div>
    <div class="div1">

            <div class="logo" id="container-pet">

                <!-- <img id="blah" src="/img/login/fondoweb.jpg" alt="Previsualización"> -->
            
            </div>

            <div class="form">
                <form action="/subirPerro" method="post"  enctype="multipart/form-data">  
                    <input id="user" type="hidden" name="user">                   
                    <input id="clave" type="hidden" name="clave">    
                    <label for="title">Agrega su Nombre</label>
                    <input type="text" placeholder="Nombre" name="title">
                    <label for="text">Agrega una Descripción</label>
                    <textarea name="description" id="#" cols="40" rows="5" placeholder="Descripción"></textarea>
                    <!-- <input type="text" placeholder="Descripción" name="description"> -->   
                    <label for="file">Foto de la Mascota</label>
                    <div class="divfile">
                        <p class="divfile_text">
                            Subir
                        </p>
                        <input type="file" placeholder="Foto de mascota" accept="image/png,image/jpeg,image/jpg" name="mascota"  id="img" class="file">
                    </div>
                    <button id="btn-submit" type="submit" name="submit" class="button">Poner en Adopción</button>
                </form>
            </div>

    </div>


    <script>
    const user = document.getElementById('user');
    const clave = document.getElementById('clave'); 
    user.value = localStorage.getItem('email');   
    clave.value = localStorage.getItem('password');
    </script>
    <script src="/js/dropPet.js"></script>

    
</body>
</html>